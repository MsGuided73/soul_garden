{
  "_comment": "Soul Garden - Coolify Deployment Configuration",
  "services": {
    "api": {
      "build": {
        "context": "./backend",
        "dockerfile": "Dockerfile"
      },
      "ports": ["8000"],
      "volumes": [
        {
          "type": "volume",
          "source": "agent-storage",
          "target": "/app/storage"
        }
      ],
      "healthcheck": {
        "test": ["CMD", "curl", "-f", "http://localhost:8000/health"],
        "interval": "30s",
        "timeout": "10s",
        "retries": 3,
        "start_period": "40s"
      },
      "restart": "unless-stopped",
      "environment": [
        "DEBUG=false",
        "HOST=0.0.0.0",
        "PORT=8000"
      ]
    }
  },
  "volumes": {
    "agent-storage": {}
  }
}
