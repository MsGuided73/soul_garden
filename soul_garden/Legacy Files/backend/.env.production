# ============================================
# Soul Garden - Production Environment
# For Coolify Deployment on Contabo VPS
# ============================================
# 
# INSTRUCTIONS:
# 1. Copy this file to .env and fill in your credentials
# 2. Upload to Coolify environment variables
# 3. Never commit actual credentials to git
# ============================================

# ============================================
# App Settings (Production)
# ============================================
DEBUG=false
APP_NAME="Soul Garden"
APP_VERSION="0.1.0"
HOST=0.0.0.0
PORT=8000

# ============================================
# Supabase Configuration (REQUIRED)
# ============================================
# Get these from your Supabase project dashboard
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-service-role-key-here

# ============================================
# OpenAI Configuration (REQUIRED)
# ============================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# ============================================
# Agent Configuration
# ============================================
DEFAULT_REFLECTION_DEPTH=3
DEFAULT_AUTO_REFLECT_INTERVAL=3600
MAX_WORKING_MEMORY_TOKENS=8000
MAX_RAG_RESULTS=10
SIMILARITY_THRESHOLD=0.7

# ============================================
# Storage Configuration (Container Path)
# ============================================
# In Docker container, use absolute path
STORAGE_TYPE=local
STORAGE_PATH=/app/storage

# ============================================
# Optional: Authentication
# ============================================
# JWT_SECRET=your-super-secret-production-key
